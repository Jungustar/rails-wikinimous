<h1>Edit Article</h1>

<div class="form-group">
  <%= form_for(@article) do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class:'form-control'%>
    </div>

    <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content, class:'form-control', rows: '10' %>
    </div>
    <%= f.submit "Save", class: 'btn btn-primary' %>
  <% end %>
</div>
